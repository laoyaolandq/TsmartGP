AT_SETUP([tar --one-top-level --show-transformed])
AT_KEYWORDS([extract onetop onetop02])

AT_TAR_CHECK([
AT_SORT_PREREQ
mkdir a
genfile --file a/b
genfile --file c
tar cf a.tar a c
mkdir out
cd out
tar --one-top-level --show-transformed  -v -x -f ../a.tar
find . | sort
],
[0],
[a/
a/b
a/c
.
./a
./a/b
./a/c
])

AT_CLEANUP
